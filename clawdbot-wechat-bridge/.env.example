# Environment Configuration
# Copy this file to .env and fill in your values

# Server
PORT=3000
HOST=0.0.0.0

# WeChat Official Account Configuration
# Get these from https://mp.weixin.qq.com
WECHAT_APPID=your_app_id
WECHAT_APPSECRET=your_app_secret
WECHAT_TOKEN=your_verification_token
# Optional: For encrypted messages
# WECHAT_ENCODING_AES_KEY=your_encoding_aes_key

# Redis Connection
REDIS_URL=redis://localhost:6379

# Bridge Configuration
# This should be the public URL of this service (used for callback URLs)
BRIDGE_BASE_URL=https://your-domain.com
# Public hostname for SSH connections displayed to users
SSH_HOST=your-server.example.com

# VM Orchestrator
ORCHESTRATOR_URL=http://orchestrator:8080
VM_READY_TIMEOUT_MS=30000

# VM Networking
VM_SUBNET=10.0.1.0/24
GATEWAY_IP=10.0.1.1
BRIDGE_NAME=fcbr0
HOST_SSH_BASE_PORT=2200

# VM Resources (per user)
DEFAULT_VCPU=1
DEFAULT_MEM_MIB=512

# LLM Gateway
# API key for the LLM provider (Zhipu AI)
# Get from https://open.bigmodel.cn
ZHIPU_API_KEY=your_zhipu_api_key

# Optional
LOG_LEVEL=info
NODE_ENV=production
